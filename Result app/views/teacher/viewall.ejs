<a href="/teacher/option" class="btn btn-info" style="margin-top:5px;">Back</a>
<h4>All Students</h4>
<div class="tableDiv">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Roll No.</th>
        <th scope="col">Name</th>
        <th scope="col">Date of Birth</th>
        <th scope="col">Score</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% student.forEach(element=> { %>
        <tr class="head">
          <td>
            <%= element.roll_no %>
          </td>
          <td>
            <%= element.name %>
          </td>
          <td>
            <%= element.date_of_birth %>
          </td>
          <td>
            <%= element.score %>
          </td>
          <td>
            <a href="/teacher/edit/<%= element.roll_no %> "><img style="margin: 0px 5px;"
                src="https://img.icons8.com/material-outlined/30/000000/edit.png" /></a>
            <a href="/teacher/delete/<%= element.roll_no %> "><img style="margin: 0px 5px;"
                src="https://img.icons8.com/ios-glyphs/30/000000/filled-trash.png" /></a>
          </td>
        </tr>
        <%}) %>
    </tbody>
  </table>
</div>
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

<script>
  const messages = '<%= message %>';
  if (messages == "Edited successfully") {
    alertify.set('notifier', 'position', 'bottom-right')
    alertify.warning(messages);
  }
  if (messages == "Deleted successfully") {
    alertify.set('notifier', 'position', 'bottom-right')
    alertify.error(messages);
  }
  if (messages == "Added successfully") {
    alertify.set('notifier', 'position', 'bottom-right')
    alertify.success(messages);
  }

</script>