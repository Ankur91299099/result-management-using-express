<h4>Editing Form for Student :<%= user.name %>
</h4>
<form method="POST" class="addStu" autocomplete="off">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Name : </label>
    <input type="text" name="name" required class="form-control" value="<%= user.name %> " id="exampleInputEmail1">
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Roll No. : </label>
    <input type="text" readonly name="roll" value="<%= user.roll_no %> " class="form-control" id="exampleInputEmail1">
  </div>

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Date of Birth : </label>
    <input type="date" name="dob" value="<%= user.date_of_birth %> " required class="form-control" id="dob" max="">
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Score : </label>
    <input type="text" name="score" value="<%= user.score %> " required class="form-control" id="exampleInputEmail1">
  </div>
  <button type="submit" class="btn btn-success">Update</button>
</form>
<script>
  var today = new Date().toISOString().split('T')[0];
  document.getElementById("dob").setAttribute("max", today);
</script>