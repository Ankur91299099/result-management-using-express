<a href="/teacher/option" class="btn btn-info" style="margin-top:5px;">Back</a>
<h4>Add Student-Result</h4>
<form method="POST" class="addStu" autocomplete="off">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Roll No. : </label>
    <input type="number" name="roll" required class="form-control" id="exampleInputEmail1" min="1" oninput="this.value = 
 !!this.value && Math.abs(this.value) > 0 ? Math.abs(this.value) : null">
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Name : </label>
    <input type="text" name="name" required class="form-control" id="exampleInputEmail1">
  </div>

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Date of Birth : </label>
    <input type="date" name="dob" class="form-control" id="dob" max="">
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Score : </label>
    <input type="number" name="score" required class="form-control" id="exampleInputEmail1" min="0" oninput="this.value = 
 !!this.value && Math.abs(this.value) >= 0 ? Math.abs(this.value) : null">
  </div>
  <button type="submit" class="btn btn-success" onclick="showAlert()">Add</button>
  <a href="/teacher/viewall" class="btn btn-primary">View All</a>
</form>
<script>

  var today = new Date().toISOString().split('T')[0];

  document.getElementById("dob").setAttribute("max", today);



</script>
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

<script>
  const messages = '<%= message %>';
  if (messages == "Rollno. already exist") {
    alertify.set('notifier', 'position', 'bottom-right')
    alertify.warning(messages);
  }
</script>